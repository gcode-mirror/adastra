<Window x:Class="WPF.ExperimentsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Experimentator" Height="580" Width="600" Loaded="Window_Loaded"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Data" Margin="3,2,3,2">
            <StackPanel Orientation="Horizontal">
                <Button Margin="2,2,2,2">Load EEG data</Button>
                <TextBlock Margin="2,2,2,2">Feature Vectors1</TextBlock>
                <TextBlock Margin="2,2,2,2">Generated by OpenVibe for subject 1</TextBlock>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Computing models over 'training' and 'validating' datasets for methods:" Margin="3,2,3,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="60"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                  <CheckBox >OpenVibe Feature Generator + LDA + Neural Network</CheckBox>
                  <ProgressBar Height="26"></ProgressBar>
                </StackPanel>
                
                <CheckBox Grid.Row="1">Emotiv Feature Generator + LDA + Support Vector Machines</CheckBox>
            </Grid>
        </GroupBox>

        <Button Grid.Row="2" Name="buttonStart" Margin="3,2,3,2">Start</Button>

        <GroupBox Grid.Row="3" Header="Calculating error over 'testing' dataset:" Margin="3,2,3,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0">OpenVibe Feature Generator + LDA + Neural Network</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="0">Emotiv Feature Generator + LDA + Support Vector Machines</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1">74%</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1">64%</TextBlock>
            </Grid>
        </GroupBox>

        <Button Grid.Row="4" Name="buttonClose" Margin="3,2,3,2" Click="buttonClose_Click">Close</Button>
    </Grid>
</Window>
