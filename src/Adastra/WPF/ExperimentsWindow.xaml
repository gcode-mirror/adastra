<Window x:Class="WPF.ExperimentsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Experimentator" Height="580" Width="600" Loaded="Window_Loaded"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0" Grid.ColumnSpan="3" Header="Data" Margin="3,2,3,2">
            <StackPanel Orientation="Horizontal">
                <Button Name="buttonLoadData" Click="buttonLoadData_Click"  Margin="2,2,2,2">Load EEG data</Button>
                <TextBlock Margin="2,2,2,2">Feature Vectors1</TextBlock>
                <TextBlock Margin="2,2,2,2">Generated by OpenVibe for subject 1</TextBlock>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.ColumnSpan="3" Header="Computing models over 'training' and 'validating' datasets for methods:" Margin="3,2,3,2">
            <ListView Grid.ColumnSpan="4"  Name="gvMethodsList">
                <ListView.View>
                    <GridView AllowsColumnReorder="true">

                        <GridViewColumn>
                            
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Method" TextAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                                    
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Name}" TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn>

                          <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ProgressBar Height="24" Width="260" Value="{Binding Path=Progress}"></ProgressBar>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                         </GridViewColumn>

                         <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Progress}" Width="35" HorizontalAlignment="Center"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <Button Grid.Row="2" Grid.ColumnSpan="3" Name="buttonStart" Margin="3,2,3,2" Click="buttonStart_Click">Start</Button>

        <GroupBox Grid.Row="3" Grid.ColumnSpan="3" Header="Calculating error over 'testing' dataset:" Margin="3,2,3,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0">OpenVibe Feature Generator + LDA + Neural Network</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="0">Emotiv Feature Generator + LDA + Support Vector Machines</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1">74%</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1">64%</TextBlock>
            </Grid>
        </GroupBox>
        
 
        <TextBlock Grid.Row="4" Grid.Column="0">Model name:</TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1"></TextBox>
        <Button Grid.Row="4" Name="buttonSaveBestModel" Grid.Column="2" Margin="3,2,3,2" HorizontalAlignment="Right">Save Best Model</Button>

        <Button Grid.Row="5" Grid.Column="2" Name="buttonClose" Margin="3,2,3,2" Click="buttonClose_Click">Close</Button>
        <StatusBar Grid.Row="6" Grid.ColumnSpan="3">Model saved.</StatusBar>
    </Grid>
</Window>
